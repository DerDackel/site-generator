<project default="coderay">
  <property name="coderay.workdir" value="target${file.separator}coderay-tmp" />

  <property name="coderay.cp" value="src${file.separator}main${file.separator}resources" />

  <property name="jruby.version" value="9.0.1.0" />

  <property name="jruby.cp" value="${user.home}${file.separator}.m2${file.separator}repository${file.separator}org${file.separator}jruby${file.separator}jruby-complete${file.separator}${jruby.version}${file.separator}jruby-complete-${jruby.version}.jar" />

  <target name="coderay">

    <echo>gem install coderay</echo>
    <java classname="org.jruby.Main" classpath="${jruby.cp}" fork="true">
      <arg value="-S" />
      <arg value="gem" />
      <arg value="install" />
      <arg value="-i" />
      <arg value="${coderay.workdir}" />
      <arg value="coderay" />
    </java>

    <mkdir dir="${coderay.cp}/gems" />
    <mkdir dir="${coderay.cp}/specifications" />

    <copy todir="${coderay.cp}/gems">
      <fileset dir="${coderay.workdir}${file.separator}gems">
        <include name="*/lib/**" />
        <include name="*/VERSION*" />
      </fileset>
    </copy>

    <copy todir="${coderay.cp}/specifications">
      <fileset dir="${coderay.workdir}${file.separator}specifications" />
    </copy>
  </target>
</project>
